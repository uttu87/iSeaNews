<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_post"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">
        <ImageView
            android:id="@+id/img_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black_t"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/_8sdp">
            <TextView
                android:id="@+id/tv_title"
                android:textSize="@dimen/_14sdp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:lines="1"
                android:text="Messi giấu mặt của Ngoại hạng Anh: Không phải Salah, hơn cả De Bruyne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_desc"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@android:color/white"
                android:lines="3"
                android:text="Mỗi đội bóng đều có một ngôi sao để xây dựng quanh. Barcelona có Lionel Messi, Man City có Kevin De Bruyne. Nhưng có một Messi giấu mặt đang thi đấu ở Ngoại hạng Anh được xem ấn tượng hơn cả."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>